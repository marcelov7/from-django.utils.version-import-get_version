# Configurações para ambiente de desenvolvimento local (XAMPP)
# Copie este arquivo para .env para usar no desenvolvimento local

# Configurações básicas do Django
SECRET_KEY=django-insecure-your-secret-key-here-change-this-in-production
DEBUG=True
ENVIRONMENT=development

# Hosts permitidos
ALLOWED_HOSTS=127.0.0.1,localhost

# Configurações do banco de dados MySQL (XAMPP)
LOCAL_DB_NAME=relatorio_system
LOCAL_DB_USER=root
LOCAL_DB_PASSWORD=
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=3306

# Redis (para Celery e cache) - opcional no desenvolvimento
REDIS_URL=redis://localhost:6379

# Configurações de email para desenvolvimento (console)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Configurações de segurança para desenvolvimento
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=False
SECURE_CONTENT_TYPE_NOSNIFF=False 